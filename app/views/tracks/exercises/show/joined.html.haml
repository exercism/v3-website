.md-container
  %h2 #{@track.title}: #{@exercise.title}

  - if @solution
    - if @solution.completed?
      Exercise Completed
    - else
      Exercise Started
      = link_to "Continue", edit_solution_path(@solution.uuid)
      = link_to "Complete", complete_track_exercise_path(@track, @exercise), method: :patch
  - else
    Exercise not started
    = button_to "Start exercise", start_track_exercise_path(@track, @exercise), method: :patch

