%section.contributors
  .c-heading-with-count
    %h2.--text.text-h4
      = graphical_icon(:contributors)
      Contributors
    .--count{ 'aria-label': "#{num_contributors} Contributors" }= num_contributors

  %ol.showcase{ "aria-label": "Top contributors" }

    - contributors[0..1].to_a.each do |contributor|
      %li{ "data-tooltip-type": "user", "data-endpoint": tooltip_profile_path(contributor.handle), "data-handle": contributor.handle }
        = link_to "#", "aria-label": "View profile of #{contributor.handle}" do
          = rounded_bg_img("https://avatars3.githubusercontent.com/u/135246?s=460&u=733b8575c8f0dbb5a52840c3efb2480b166c897a&v=4", "Erik SchierBOOM's uploaded avatar")
          .name= contributor.name
          = render ViewComponents::Reputation.new(contributor.reputation)

  %ol.faces{ "aria-label": "Other significant contributors" }
    - contributors[2..9].to_a.each do |contributor|
      %li= rounded_bg_link("https://avatars3.githubusercontent.com/u/2716614?s=460&u=7403dc7f80ccfd983705a1637fac1b12d2dcbad2&v=4", "#", "Visit #{contributor.name} profile", "#{contributor.name}'s uploaded avatar", "face")
    %li= link_to "See all", "#", class: "all", "aria-label": "See all contributors for this track" # TODO

  .cta
    %h3
      We
      %span{ 'aria-label': "love" } ðŸ’™
      our contributors
    %p Exercism relies on open-source contributors to build our language tracks and mentor students.
    = link_to "Contribute to the #{track.title} track ->", "#"


