#page-journey
  = render "journey/hero", user_tracks: @user_tracks

  %article.badges-tab.theme-dark
    .md-container.container
      .c-search-bar
        %input.--search{ placeholder: "Search for a badge" }
        %button.--filter-btn
          Filter By
          = graphical_icon :'chevron-down'
        %button.--reset-btn
          = graphical_icon :reset
          Reset filters

      .results-title-bar
        %h3 Showing #{@badges.size} badges
        .c-select.order
          %select
            %option Sort by Rarest First

      .badges
        - @badges.each do |badge|
          .c-badge
            .c-badge-medallion{ class: "--#{badge.rarity}" }
              = graphical_icon badge.icon
            .--info
              .--name= badge.name
              .--desc= badge.description
