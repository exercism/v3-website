.heading
  = avatar(@user)
  .identifier
    %h4.name= @user.name
    .handle= @user.handle

  = render ViewComponents::Reputation.new(@user.formatted_reputation)

- if @user.bio.present?
  .bio= @user.bio

- if @user.location.present?
  .location
    = icon(:location, "Located in")
    = @user.location
